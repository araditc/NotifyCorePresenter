<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:background="#00ffffff"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/contactBtnSheet"
    android:orientation="vertical"
    android:gravity="center"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:layout_margin="@dimen/space_m"
    android:background="@drawable/item_contact_background"
    android:padding="@dimen/view_xl">

    <ImageView
      android:id="@+id/imgThumbnail"
      android:layout_width="215px"
      android:layout_height="215px"
      android:layout_gravity="center"
      android:adjustViewBounds="true"
      android:src="@mipmap/ic_launcher_round" />

    <Space
      android:layout_width="wrap_content"
      android:layout_height="@dimen/space_l" />

    <TextView
      android:id="@+id/txtFullName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:text="@string/hello_world"
      style="@style/text_head4" />

    <Space
      android:layout_width="wrap_content"
      android:layout_height="@dimen/view_s" />

    <TextView
      android:id="@+id/txtUsername"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:text="@string/hello_world"
      style="@style/text_head5" />


    <Space
      android:layout_width="wrap_content"
      android:layout_height="@dimen/space_l" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center">

      <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCall"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:padding="@dimen/view_m"
        android:text="@string/call"
        style="@style/app_button"
        android:gravity="center"
        android:background="@drawable/button_background"
        android:drawablePadding="@dimen/view_s"
        android:drawableStart="@drawable/ic_call" />

      <Space
        android:layout_width="@dimen/view_xxl"
        android:layout_height="@dimen/view_m" />

      <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:padding="@dimen/view_m"
        android:text="@string/save"
        android:background="@drawable/button_background"
        style="@style/app_button"
        android:gravity="end|center"
        android:drawablePadding="@dimen/view_s"
        android:drawableStart="@drawable/ic_save" />

    </LinearLayout>

  </LinearLayout>

</LinearLayout>