<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/llayContainer"
  android:orientation="horizontal"
  android:layout_width="wrap_content"
  android:background="@drawable/filter_button_background"
  android:layout_height="wrap_content"
  android:gravity="center"
  android:layout_margin="@dimen/view_s">

  <androidx.appcompat.widget.AppCompatButton
    android:id="@+id/btnDeleteFilter"
    android:layout_width="24dp"
    android:layout_height="24dp"
    style="@style/app_button"
    android:textColor="@color/black"
    android:padding="@dimen/view_s"
    android:visibility="gone"
    android:background="#00FFFFFF"
    android:drawableStart="@drawable/ic_close" />


  <androidx.appcompat.widget.AppCompatButton
    android:id="@+id/btnFilter"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00FFFFFF"
    android:text="@string/audios_title"
    style="@style/app_button"
    android:textColor="@color/black"
    android:padding="@dimen/view_s"
    android:layout_marginHorizontal="@dimen/view_s" />

</LinearLayout>